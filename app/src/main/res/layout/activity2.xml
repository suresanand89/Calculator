<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1.0"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="50dp"
            android:id="@+id/edittext1"
            android:focusableInTouchMode="false"
            android:gravity="right"
        />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="DEL"
            android:textStyle="bold"
            android:id="@+id/buttondel"

            android:layout_below="@+id/edittext1"
            android:layout_alignParentEnd="true" />

     </RelativeLayout>

     <GridLayout
         android:layout_width="match_parent"
         android:layout_height="0dip"
         android:layout_weight="0.7"
         android:columnCount="4"
         android:rowCount="4">

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"

             android:text="sin"
             android:textStyle="bold"
             android:id="@+id/buttonSine"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"

             android:text="cos"
             android:textStyle="bold"
             android:id="@+id/buttonCosine"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"

             android:text="tan"
             android:textStyle="bold"
             android:id="@+id/buttonTangent"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"

             android:text="ln"
             android:textStyle="bold"
             android:id="@+id/buttonNatLog"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="log"
             android:textStyle="bold"
             android:id="@+id/buttonLog"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="pi"
             android:textStyle="bold"
             android:id="@+id/buttonPi"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="e"
             android:textStyle="bold"
             android:id="@+id/buttonExp"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="%"
             android:textStyle="bold"
             android:id="@+id/buttonMod"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="!"
             android:textStyle="bold"
             android:id="@+id/buttonFact"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="@string/sqrt"
             android:textStyle="bold"
             android:id="@+id/buttonSqrt"
         />

         <Button
             android:layout_height="@dimen/gridbox"
             android:layout_width="@dimen/gridbox"
             android:background="#E5E4E2"
             android:padding="5dp"
             android:text="^"
             android:id="@+id/buttonPow"
         />








     </GridLayout>




</LinearLayout>
